@model IEnumerable<wsad_app.Models.ShoppingCart.ShoppingCartViewModel>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Unit Price
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            Total Price
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.UnitPrice)
            </td>
            <td>
                @Html.TextBoxFor(modelItem => item.Quantity)
            </td>
            <td>
                @string.Format("{0:c}", item.Product.UnitPrice * item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })


            </td>
        </tr>
    }

</table>
